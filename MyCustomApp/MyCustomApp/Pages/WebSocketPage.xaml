<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCustomApp.Pages.WebSocketPage"
             Title="WebSocket"
             BackgroundColor="Black">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Welcome to WebSocket Client"
               HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

        <Button Text="Connect to WebSocket Server" Clicked="OnConnectButtonClicked" />
        <Entry x:Name="MessageEntry" TextColor="#D0D0D0" Placeholder="Enter message" />
        <Button Text="Send Message" Clicked="OnSendMessageButtonClicked" />
        <Label x:Name="ResponseLabel" TextColor="#D0D0D0" Text="Response will be shown here" />
    </StackLayout>

</ContentPage>
